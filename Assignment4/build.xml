<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project>




	<target name="clean">
		<delete dir="build" />
	</target>

	<target name="compile">
		<mkdir dir="bin/classes" />
		<javac srcdir="src" destdir="bin/classes" />
	</target>

	<target name="jar">
		<mkdir dir="bin/" />
		<jar destfile="bin/server.jar" basedir="bin/classes">
			<manifest>
				<attribute name="Main-Class" value="threadPerClient.MultipleClientProtocolServer" />
			</manifest>
		</jar>
	</target>

	<target name="run">
		<java jar="bin/jar/server.jar" fork="true" />
	</target>



	<target name="server">
		<java jar="bin/server.jar" failonerror="true" fork="true">
			<classpath refid="Assignment4.classpath" />
			<arg value="${arg0}" />
		</java>
	</target>
</project>
